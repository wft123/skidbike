<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/LinearLayout1"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="edu.rapa.iot.android.skidbike.view.RegistActivity" >
    
    
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="80dp"
        android:textAppearance="?android:attr/textAppearanceLarge" 
        android:text="@string/app_name"
        android:textSize="40sp" 
        android:layout_gravity="center"/>

    <EditText
        android:id="@+id/newIDEt"
        android:layout_width="250dp"
        android:layout_height="50dp"
        android:layout_gravity="center"
        android:layout_marginTop="20dp"
        android:paddingLeft="60dp"
        android:background="@drawable/idedit_img"
        android:hint="@string/email_hint"
        android:inputType="textEmailAddress"
        android:ems="10" >

        <requestFocus />
    </EditText>

    <EditText
        android:id="@+id/newPhoneNumEt"
        android:layout_width="250dp"
        android:layout_height="50dp"
        android:layout_gravity="center"
        android:layout_marginTop="10dp"
        android:paddingLeft="60dp"
        android:background="@drawable/phoneedit_img"
        android:ems="10" />
    
     <EditText
        android:id="@+id/newPwEt"
        android:layout_width="250dp"
        android:layout_height="50dp"
        android:layout_gravity="center"
        android:layout_marginTop="10dp"
        android:paddingLeft="60dp"
        android:background="@drawable/pwdedit_img"
        android:ems="10" />
     
      <EditText
        android:id="@+id/newPwConfirmEt"
        android:layout_width="250dp"
        android:layout_height="50dp"
        android:layout_gravity="center"
        android:layout_marginTop="10dp"
        android:paddingLeft="60dp"
        android:background="@drawable/pwdmoreedit_img"
        android:ems="10" />


    <Button
        android:id="@+id/okBtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="30dp"
        android:background="@drawable/regist_ok_img" />

</LinearLayout>
